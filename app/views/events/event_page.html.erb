<h1><%= @event[0].name %></h1>
<div class="row">
  <div class="col s5">
    <p>Host: <%= @event[0].first_name %> <%= @event[0].last_name %></p>
    <p>Date: <%= @event[0].date %></p>
    <p>Location: <%= @event[0].city %>, <%= @event[0].state%></p>
    <p>People who are joining the event: <%= @count %></p>
    <table class="striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Location</th>
          <th>State</th>
        </tr>
      </thead>
      <tbody>
        <% @attendees.each do |attendee| %>
        <tr>
          <td><%= attendee.first_name%> <%= attendee.last_name%></td>
          <td><%= attendee.city%> </td>
          <td><%= attendee.state%> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col s5">
    <h3>Discussion about this event:</h3>
    <% @comments.each do |comment| %>
    <p><%=comment.first_name%> says: <%=comment.comment%></p>
    <hr>
    <% end %>
    <p>Add Comment:</p>
    <form action="/comments/<%=@event[0].id%>" method="POST">
      <input type="text" name="comment">
      <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
      <!-- <input type="hidden" name="_method" value="PATCH"> -->
      <input type="submit" value="Submit Comments">
    </form>
  </div>
</div>
